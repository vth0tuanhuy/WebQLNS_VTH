                                                                        <label>Tên chức vụ</label>
                                                                        <div class="col-md-10">
                                                                            <input id="tenChucVu" name="tenChucVu" class="form-control" value="@item1.tenChucVu" />

                                                                        </div>
                                                                    </div>

@model IEnumerable<WebQLNS_VTH.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a href='@Url.Action("Create", "TaiKhoans")' class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z" />
        </svg> Thêm
    </a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card" style="border-radius: 15px; background-color: #99ccff; color: black ">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <img src="~/Img/@item.NhanVien.anh" alt="" class="img-fluid" style="border:1px solid black;width: 180px; border-radius: 10px; height:180px">
                            <p class="text-center mt-2">
                                <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("Edit", "TaiKhoans", new { id = item.maTK })'">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                </button>
                                <button class="btn btn-danger" type="button" onclick="location.href='@Url.Action("Delete", "TaiKhoans", new { id = item.maTK })'">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
                                    </svg>
                                </button>
                            </p>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="text-uppercase fw-bolder">@item.NhanVien.hoTen</h5>
                            <hr>
                            <p class="mb-2 pb-1">@item.NhanVien.ChucVu.tenChucVu</p>
                            <h6>Loại tài khoản: @item.loaiTK</h6>
                            <hr>
                            <div class="row">
                                <div class="col-6">
                                    <h6>Tài khoản</h6>
                                    <p class="text-dark">@item.tenDangNhap</p>
                                </div>
                                <div class="col-6">
                                    <h6>Mật khẩu</h6>
                                    <p class="text-dark">@item.matKhau</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>